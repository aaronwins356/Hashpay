{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./frontend/@types", "./src/types", "./types"],
    "types": ["jest", "react", "react-native"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "backend",
    "node_modules",
    "dist",
    "android",
    "ios"
  ]
}
