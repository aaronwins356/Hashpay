
{
  "name": "hashpay",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "expo test --watch=false",
    "build:mobile": "expo export --platform android,ios --non-interactive",
    "format": "prettier --check '**/*.{js,jsx,ts,tsx,json,md}'",
    "format:write": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "expo": "~50.0.6",
    "expo-barcode-scanner": "~12.7.0",
    "expo-clipboard": "~5.0.1",
    "expo-local-authentication": "~13.5.0",
    "expo-secure-store": "~12.5.0",
    "framer-motion": "^11.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.2",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-qrcode-svg": "^6.3.2",
    "react-native-reanimated": "~3.6.2",
    "react-native-safe-area-context": "4.7.1",
    "react-native-screens": "~3.29.0",
    "react-native-toast-message": "^2.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@react-native-community/eslint-config": "^3.2.0",
    "@eslint/eslintrc": "^3.0.4",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.1",
    "@types/react": "^18.2.22",
    "@types/react-native": "^0.72.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest-expo": "~50.0.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": ["@testing-library/jest-native/extend-expect"],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|@react-native-community|expo(nent)?|@expo(nent)?|react-native-gesture-handler|react-native-screens|react-native-safe-area-context|@react-navigation|@unimodules)/)"
    ]
  }
